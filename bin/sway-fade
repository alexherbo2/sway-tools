#!/bin/sh

# A tool to fade windows.
#
# Usage:
#
# sway-fade
#
# Configuration:
#
# exec sway-fade

# Options
steps=10
time=0.1
begin_opacity=0.0
end_opacity=1.0

# Internal variables
stride=$(echo "($end_opacity - $begin_opacity) / $steps" | bc -l)
wait_duration=$(echo "$time / $steps" | bc -l)

# Functions
fade_in() {
  swaymsg "[con_id=$container_id]" -- opacity set "$begin_opacity"
  seq "$steps" |
  while read step; do
    swaymsg "[con_id=$container_id]" -- opacity plus "$stride"
    sleep "$wait_duration"
  done
  swaymsg "[con_id=$container_id]" -- opacity set "$end_opacity"
}

# Events
fade_in_on_new_window() {
  swaymsg --type subscribe --monitor '["window"]' |
  jq --unbuffered 'select(.change == "new") | .container.id' |

  # Add listener with context:
  while read container_id; do
    fade_in < /dev/null > /dev/null 2>&1 &
  done
}

fade_in_on_new_window
